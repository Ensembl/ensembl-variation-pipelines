trace.overwrite = true
dag.overwrite = true

profiles {
  standard {
    process {
      executor = 'local'
    }
  }

  lsf {
    process {
      executor = 'lsf'
      queue = 'production'
      
      withLabel: bigmem {
        queue = 'bigmem'
        memory = '320GB'
      }
    }
    executor {
        queueSize = 1200
	submitRateLimit = '50/10sec'
    }    
  } 
  
  // we need separate profile human because it takes lot of memory than others
  // it is run on top of lsf profile (e.g. --profile lsf,human)
  human {
    process.memory = '16GB'
  }
}

process {
  cpus = 1
  memory = '8GB'

  withLabel: bcftools {
    container = 'docker://quay.io/biocontainers/bcftools:1.13--h3a49de5_0'
  }

  withLabel: vep {
    container = 'docker://ensemblorg/ensembl-vep'
  }
}

singularity {
  enabled = true
  autoMounts = true
}
